@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;


Clients

@if (@Model.Count == 0)
{
  <h3>This stylist doesn't have any clients added yet!</h3> 
}

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) || Stylist: @client.Stylist.Name</li>
}

<p>@Html.ActionLink("Add a new Client", "Create")</p>
<p>@Html.ActionLink("Return to Stylists", "Index", "Stylists")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>