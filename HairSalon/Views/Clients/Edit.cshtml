@{
  Layout = "_Layout";
}
@model HairSalon.Models.Client;

<h2>Edit: @Html.DisplayFor(model => model.Name)</h2>
<hr />
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)

  <h2>@Html.LabelFor(model => model.Name)</h2>
  <p>@Html.TextBoxFor(model => model.Name, new {required = "required"})</p>

  <h2>@Html.LabelFor(model => model.Stylist)</h2>
  <p>@Html.DropDownList("StylistId")</p>

  <input type="submit" value="Save" class="btn btn-light" />
}
<hr />
<p>@Html.ActionLink("Cancel", "Index")</p>